---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Cristo Obrero ofrece servicios educativos en la modalidad de educación común en 5 niveles: jardin de infantes, nivel primario, nivel secundario, nivel superior."
    />
    <meta name="application-name" content="Instituto Cristo Obero" />
    <meta name="author" content="German Andres Ferreyra | Sebastián Perez" />
    <meta name="creator" content="German Andres Ferreyra | Sebastián Perez" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="category" content="Instituto Cristo Obero" />
    <meta
      name="keywords"
      content="Colegio, Estudios, Instituto, Cristo Obrero, ICO, Ico, Primaria, Secundaria, Terciario, Analista de Sistemas, Inscripciónes, Villa Soldati, Catolica, Nivel Inicial, Buenos Aires, Argentina"
    />

    <meta property="og:title" content="Instituto Cristo Obero" />
    <meta property="og:description" content="Instituto Cristo Obero" />
    <meta property="og:url" content="https://cristoobrero.com.ar/" />
    <meta property="og:site_name" content="Instituto Cristo Obero" />
    <meta property="og:image" content="svg/IconIco.svg" />
    <link rel="image_src" href="svg/IconIco.svg" />
    <link rel="icon" type="image/svg+xml" href="svg/IconIco.svg" />
    <title>{title}</title>
  </head>
  <body class="relative">
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
